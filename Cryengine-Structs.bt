#include "Cryengine-BaseTypes.bt"

struct HEADER(FILETYPE fileType) {
    if (fileType == CRYENGINE_3_4) {
        char fileSig[8];
        int fileType <format=hex>;
        int version <format=hex>;
        int offset <format=hex>;  // location of header chunks
        int numChunks;
    } else if (fileType == CRYENGINE_3_8) {
        char fileSig[4];
        int version <format=hex>;
        int numChunks;
        int offset <format=hex>;  // location of header chunks
    };
};

struct CHUNKTYPE(FILETYPE fileType) {
    if (fileType == CRYENGINE_3_4) {
        CHUNKTYPE_UI chunkType;
    } else if (fileType == CRYENGINE_3_8) {
        CHUNKTYPE_US chunkType;
    };
};

struct CHUNKHEADER(FILETYPE fileVersion) {
    if (fileVersion == CRYENGINE_3_4) {
        CHUNKTYPE chunkType(fileVersion);
        uint version <format=hex>;
        uint offset <format=hex>;
        uint id <format=hex>;
    }
    else if (fileVersion == CRYENGINE_3_8) {
       const uint version = 0x0800;
        // No chunk header in these.
    };
};

struct CHUNKTABLEENTRY(FILETYPE ver) {
    if (ver == CRYENGINE_3_4 || ver == CRYENGINE_3_4) {
        CHUNKTYPE chunkType(ver);
        uint version <format=hex>;  
        uint offset <format=hex>;
        uint id <format=hex>;
        uint size <format=hex>;
    }
    else if (ver == CRYENGINE_3_8) {
        CHUNKTYPE chunkType(ver);
        ushort version <format=hex>;
        uint id <format=hex>;
        uint size <format=hex>;
        uint offset <format=hex>;
    };
};

struct CHUNKTABLE(FILETYPE fileVersion, int numChunks) {
    local uint i;
    for (i = 0; i < numChunks; i++) {
        CHUNKTABLEENTRY tableEntry(fileVersion) <comment=PrintChunkTableType>;
    };
};

// Main controller structure
struct CONTROLLER_829(FILETYPE fileVersion) {
  CHUNKHEADER chunkHeader(fileVersion);

  // Header fields
  uint controllerId;
  uint16 numberOfRotationKeys;
  uint16 numberOfPositionKeys;
  ubyte rotationFormat;
  ubyte rotationTimeFormat;
  ubyte positionFormat;
  ubyte positionKeyInfo;
  ubyte positionTimeFormat;
  ubyte tracksAligned;

  local int alignment = (tracksAligned != 0) ? 4 : 1;
  local int i;

  // Align before first track data if tracksAligned is set
  if (tracksAligned != 0) {
      local int initialPos = FTell();
      local int initialPadding = (4 - (initialPos % 4)) % 4;
      if (initialPadding > 0) {
          ubyte initialAlignmentPadding[initialPadding];
      }
  }

  // --- Rotation Data ---
  if (numberOfRotationKeys > 0) {
      // Rotation values
      switch (rotationFormat) {
          case eNoCompress:
          case eNoCompressQuat:
              NoCompressQuat rotationKeys[numberOfRotationKeys];
              break;
          case eSmallTree48BitQuat:
              SmallTree48BitQuat rotationKeys[numberOfRotationKeys] <comment=PrintSmallTree48BitQuat>;
              break;
          case eSmallTree64BitQuat:
              SmallTree64BitQuat rotationKeys[numberOfRotationKeys] <comment=PrintSmallTree64BitQuat>;
              break;
          case eSmallTree64BitExtQuat:
              SmallTree64BitExtQuat rotationKeys[numberOfRotationKeys] <comment=PrintSmallTree64BitExtQuat>;
              break;
          default:
              ubyte rotationData[numberOfRotationKeys * GetRotationSize(rotationFormat)];
              break;
      }

      // Align if needed
      if (tracksAligned != 0) {
          local int pos = FTell();
          local int padding = (4 - (pos % 4)) % 4;
          if (padding > 0) {
              ubyte rotationValuePadding[padding];
          }
      }

      // Rotation time keys
      switch (rotationTimeFormat) {
          case eF32:
          case eF32StartStop:
              F32KeyTime rotationTimes[numberOfRotationKeys];
              break;
          case eUINT16:
          case eUINT16StartStop:
          case eBitset:
              UINT16KeyTime rotationTimes[numberOfRotationKeys];
              break;
          case eByte:
          case eByteStartStop:
              ByteKeyTime rotationTimes[numberOfRotationKeys];
              break;
          default:
              ubyte rotationTimeData[numberOfRotationKeys * GetTimeKeySize(rotationTimeFormat)];
              break;
      }

      // Align if needed
      if (tracksAligned != 0) {
          local int pos = FTell();
          local int padding = (4 - (pos % 4)) % 4;
          if (padding > 0) {
              ubyte rotationTimePadding[padding];
          }
      }
  }

  // --- Position Data ---
  if (numberOfPositionKeys > 0) {
      // Position values
      switch (positionFormat) {
          case eNoCompress:
          case eNoCompressVec3:
              VECTOR3 positionKeys[numberOfPositionKeys] <comment=PrintVector3>;
              break;
          default:
              ubyte positionData[numberOfPositionKeys * GetPositionSize(positionFormat)];
              break;
      }

      // Align if needed
      if (tracksAligned != 0) {
          local int pos = FTell();
          local int padding = (4 - (pos % 4)) % 4;
          if (padding > 0) {
              ubyte positionValuePadding[padding];
          }
      }

      // Position time keys - ONLY if positionKeyInfo != 0 (eKeyTimeRotation)
      // If positionKeyInfo == 0, position shares rotation's time keys
      if (positionKeyInfo != 0) {
          switch (positionTimeFormat) {
              case eF32:
              case eF32StartStop:
                  F32KeyTime positionTimes[numberOfPositionKeys];
                  break;
              case eUINT16:
              case eUINT16StartStop:
              case eBitset:
                  UINT16KeyTime positionTimes[numberOfPositionKeys];
                  break;
              case eByte:
              case eByteStartStop:
                  ByteKeyTime positionTimes[numberOfPositionKeys];
                  break;
              default:
                  ubyte positionTimeData[numberOfPositionKeys * GetTimeKeySize(positionTimeFormat)];
                  break;
          }

          // Final alignment if needed
          if (tracksAligned != 0) {
              local int pos = FTell();
              local int padding = (4 - (pos % 4)) % 4;
              if (padding > 0) {
                  ubyte positionTimePadding[padding];
              }
          }
      }
  }
};

// Key times format count array (one count per EKeyTimesFormat, 7 values)
struct KeyTimesFormatCounts {
  uint32 eF32;
  uint32 eUINT16;
  uint32 eByte;
  uint32 eF32StartStop;
  uint32 eUINT16StartStop;
  uint32 eByteStartStop;
  uint32 eBitset;
};

// Main chunk header
struct CONTROLLER_CHUNK_DESC_0905 {
  uint32 numKeyPos;    // Number of position track entries
  uint32 numKeyRot;    // Number of rotation track entries
  uint32 numKeyTime;   // Number of key time track entries
  uint32 numAnims;     // Number of animations in database
};

// Forward declarations of size arrays (populated from chunk data)
local uint32 g_numKeyTime;
local uint32 g_numKeyPos;
local uint32 g_numKeyRot;
local uint32 g_numAnims;

